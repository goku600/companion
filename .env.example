# -------------------------------------------------------
# Copy this file to .env and fill in your real values.
# Never commit .env to version control!
# -------------------------------------------------------

# Telegram Bot Token (from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# xAI API Key (from https://console.x.ai)
XAI_API_KEY=YOUR_XAI_API_KEY

# xAI model to use (set to auto for best available)
# Options: grok-2, grok-2-latest, grok-1
XAI_MODEL=auto

# Optional: Restrict bot access to specific Telegram user IDs
# Comma-separated list of numeric IDs. Leave blank to allow everyone.
ALLOWED_TELEGRAM_USER_IDS=
